<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <title>Handlebars</title>
</head>
<body>
   {{{body}}}
   <hr>

   <h1 style="color:red" class="text-center">VISTA DE PRODUCTOS</h1>
    <div class="container bg-secondary">  
        <div class="row">
            <div class="col">
                <h2>Nombre</h2>
            </div>
            <div class="col">
                <h2>Precio</h2>
            </div>
            <div class="col">
                <h2>Miniatura</h2>
            </div>
        </div> 
    </div>
    <div class="container bg-secondary" id="productos">  
    </div>
   <h1>Chat</h1>

   <div class="mb-3">
        <form onsubmit=" return addMessage(this)"> 
            <label  class="form-label">Email:</label>
            <input type="text" id="email"  >
            <label   class="form-label">Mensaje:</label>
            <input type="text" id='mensaje'  >
            <input  class='btn btn-secondary' value="Enviar" type="submit">
        </form>
   </div>
    <hr>
   <div id="messages">

   </div>
<script>
    const socket = io.connect();
    socket.on('mensajes', (mensajes) => {
         const html = mensajes.map((elem, index) => {
        return(`<div style="display:flex">
            <strong style='color:blue'>${elem.email}</strong>
            <p style='color:brown'>${new Date().toLocaleString()}</p>:
            <em style='color:green'>${elem.mensaje}</em> 
            </div>`)
    }).join(" ");
    document.getElementById('messages').innerHTML = html;

    })

    function addMessage(e) {
    const mensaje = {
        email: document.getElementById('email').value,
        mensaje: document.getElementById('mensaje').value
    };
    socket.emit('new-message', mensaje);
    return false;
}
    socket.on('tabla', tabla => {
        const html = tabla.datos.map(i => {
            return (
                `<div class="row">
                <div class="col">
                    <h5>${i.title}</h5>
                </div>
                <div class="col">
                    <h5>${i.price}</h5>
                </div>
                <div class="col-" style="width: 5rem">
                    <img src="${i.thumbnail}" alt="" class="card-img-top">
                </div>
            </div> `
            )
        })
        document.getElementById('productos').innerHTML = html
     
    })

</script>
</body>
</html>